import random

while True:
    choice = input("Roll the dice? (y/n): ").lower()
    if choice == "y":
        die1 = random.randint(1, 6)
        die2 = random.randint(1, 6)
        print(f" Dice no.1 - {die1}, Dice no.2 - {die2}")
    elif choice == "n":
        print("Thanks for playing! ")
        break
    else:
        print("Invalid Choice! ")